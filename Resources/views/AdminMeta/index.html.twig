{% extends 'NSAdminBundle:Layout:col1.html.twig' %}

{% block content_header %}
    <h3>SEO Meta</h3>
{% endblock %}

{% block content_content %}
    <a href="{{ url('ns_admin_bundle', { adminBundle: 'NSSeoBundle', adminController: 'meta', adminAction: 'form'}) }}" class="btn">Добавить мета</a>

    {% if metas %}
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th style="width:200px">URL</th>
                <th>Title</th>
                <th style="width:100px">Операции</th>
            </tr>
            </thead>
            <tbody>
            {% for meta in metas %}
                <tr>
                    <td>{{ meta.url }}</td>
                    <td>{{ meta.title }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ url('ns_admin_bundle', { adminBundle: 'NSSeoBundle', adminController: 'meta', adminAction: 'form'}) }}?id={{ meta.id }}" class="btn btn-mini"><i class="icon-pencil"></i></a>
                            <a href="{{ url('ns_admin_bundle', { adminBundle: 'NSSeoBundle', adminController: 'meta', adminAction: 'delete'}) }}?id={{ meta.id }}" class="btn btn-mini ns-confirm"><i class="icon-trash"></i></a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}